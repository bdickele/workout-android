<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            android:descendantFocusability="blocksDescendants">

            <TextView
                android:id="@+id/routine_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/shapeRoutineBackground"
                android:textSize="@dimen/shapeTextSize"
                android:textStyle="bold"
                android:layout_marginStart="16dp" />

            <FrameLayout
                android:id="@+id/reps_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/routine_code"
                app:layout_constraintStart_toStartOf="@id/routine_code"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>