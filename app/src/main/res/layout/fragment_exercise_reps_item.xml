<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="5dp">

    <TextView
        android:id="@+id/exercise_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="100dp"
        android:textColor="@color/textColor1" />

    <TextView
        android:id="@+id/exercise_reps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/exercise_date"
        android:layout_alignBaseline="@id/exercise_date"
        android:textColor="@color/textColor1" />

    <TextView
        android:id="@+id/exercise_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/exercise_reps"
        android:layout_alignParentEnd="true"
        android:textColor="@color/textColor1" />

    <TextView
        android:id="@+id/exercise_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/exercise_reps"
        android:layout_alignStart="@id/exercise_date"
        android:layout_marginTop="1dp"
        android:textStyle="italic"
        android:textColor="@color/textColor2" />

</RelativeLayout>