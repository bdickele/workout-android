<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:nestedScrollingEnabled="false"
    android:overScrollMode="never">

    <TextView
        android:id="@+id/routine_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/routine_shape"
        android:gravity="center"
        android:minWidth="40dp"
        android:textColor="@color/shapeRoutineForeground"
        android:textSize="@dimen/shapeTextSize"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/exercise_reps_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/routine_code"
        android:layout_marginStart="8dp"
        android:minHeight="60dp"
        android:nestedScrollingEnabled="false"
        android:overScrollMode="never" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/exercise_reps_recycler_view"
        android:layout_alignStart="@id/routine_code"
        android:layout_marginBottom="8dp"
        android:background="?android:attr/listDivider" />

</RelativeLayout>